<%- include('../partials/head', { pageTitle: 'Mutasi Item', page: 'mutations' }) %>

<div class="card">
  <div class="card-header">
    <div>
      <h3>Mutasi Per Item</h3>
      <p>Riwayat pergerakan stock per item dalam range tanggal.</p>
    </div>
  </div>
  <form method="get" action="/mutations" class="form-inline">
    <label>
      Tanggal Mulai
      <input name="start" type="date" value="<%= start %>" required />
    </label>
    <label>
      Tanggal Akhir
      <input name="end" type="date" value="<%= end %>" required />
    </label>
    <label>
      Cari Item
      <input type="text" class="select-search" data-target="mutation-item-select" placeholder="Ketik nama item..." />
    </label>
    <label>
      Item
      <select id="mutation-item-select" name="item_id">
        <option value="">Semua Item</option>
        <% items.forEach((item) => { %>
          <option value="<%= item.id %>" <%= String(itemId || '') === String(item.id) ? 'selected' : '' %>>
            <%= item.group_name %> - <%= item.name %> - <%= formatDate(item.expiry_date) %>
          </option>
        <% }) %>
      </select>
    </label>
    <button class="btn primary" type="submit">Tampilkan</button>
    <% if (flatRows.length > 0) { %>
      <div class="export-row">
        <a class="btn ghost" href="/export/mutations?format=xlsx&start=<%= start %>&end=<%= end %><% if (itemId) { %>&item_id=<%= itemId %><% } %>">Export Excel</a>
        <a class="btn ghost" href="/export/mutations?format=pdf&start=<%= start %>&end=<%= end %><% if (itemId) { %>&item_id=<%= itemId %><% } %>">Export PDF</a>
        <a class="btn ghost" href="/export/mutations?format=csv&start=<%= start %>&end=<%= end %><% if (itemId) { %>&item_id=<%= itemId %><% } %>">Export CSV</a>
      </div>
    <% } %>
  </form>
</div>

<% if (flatRows.length === 0) { %>
  <div class="empty-state">Belum ada data mutasi untuk range ini.</div>
<% } else { %>
  <% grouped.forEach((group) => { %>
    <div class="card">
      <div class="card-header">
        <div>
          <h3><%= group.item.item_name %></h3>
          <p><%= group.item.label %></p>
        </div>
      </div>
      <div class="table-wrapper">
        <table>
          <thead>
            <tr>
              <th>Tanggal</th>
              <th>Tipe</th>
              <th>Qty</th>
              <th>Saldo</th>
              <th>Catatan</th>
              <th>Dibuat Oleh</th>
              <th>Dibuat</th>
            </tr>
          </thead>
          <tbody>
            <% group.rows.forEach((row) => { %>
              <tr>
                <td><%= formatDateTime(row.event_date) %></td>
                <td><%= row.type %></td>
                <td><%= formatQty(row.qty) %></td>
                <td><%= formatQty(row.saldo) %></td>
                <td><%= row.note || '-' %></td>
                <td><%= row.created_by_name || '-' %></td>
                <td><%= row.created_at ? formatDateTime(row.created_at) : '-' %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  <% }) %>
<% } %>

<%- include('../partials/foot') %>
