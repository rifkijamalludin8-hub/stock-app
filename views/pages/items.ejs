<%- include('../partials/head', { pageTitle: 'Daftar Item', page: 'items' }) %>

<div class="grid-2">
  <div class="card">
    <div class="card-header">
      <div>
        <h3>Tambah Item</h3>
        <p>Isi data item termasuk expired date.</p>
      </div>
    </div>
    <% if (editItem) { %>
      <form method="post" action="/items/<%= editItem.id %>/update" class="form-grid">
        <label>
          Nama Item
          <input name="name" value="<%= editItem.name %>" required />
        </label>
        <label>
          Jenis Barang
          <select name="group_id" required>
            <option value="">Pilih Jenis Barang</option>
            <% groups.forEach((group) => { %>
              <option value="<%= group.id %>" <%= String(group.id) === String(editItem.group_id) ? 'selected' : '' %>>
                <%= group.division_name %> • <%= group.name %>
              </option>
            <% }) %>
          </select>
        </label>
        <label>
          SKU
          <input name="sku" value="<%= editItem.sku || '' %>" />
        </label>
        <label>
          Satuan
          <input name="unit" value="<%= editItem.unit || '' %>" placeholder="pcs / box" />
        </label>
        <label>
          Expired Date
          <input name="expiry_date" type="date" value="<%= editItem.expiry_date || '' %>" />
        </label>
        <label>
          Min Stock
          <input name="min_stock" type="number" step="0.01" value="<%= editItem.min_stock || 0 %>" />
        </label>
        <div class="actions">
          <button class="btn primary" type="submit">Simpan Perubahan</button>
          <a class="btn ghost" href="/items">Batal</a>
        </div>
      </form>
    <% } else { %>
      <form method="post" action="/items" class="form-grid">
        <label>
          Nama Item
          <input name="name" required />
        </label>
        <label>
          Jenis Barang
          <select name="group_id" required>
            <option value="">Pilih Jenis Barang</option>
            <% groups.forEach((group) => { %>
              <option value="<%= group.id %>"><%= group.division_name %> • <%= group.name %></option>
            <% }) %>
          </select>
        </label>
        <label>
          SKU
          <input name="sku" />
        </label>
        <label>
          Satuan
          <input name="unit" placeholder="pcs / box" />
        </label>
        <label>
          Expired Date
          <input name="expiry_date" type="date" />
        </label>
        <label>
          Min Stock
          <input name="min_stock" type="number" step="0.01" value="0" />
        </label>
        <button class="btn primary" type="submit">Simpan</button>
      </form>
    <% } %>
    <div class="export-row">
      <a class="btn ghost" href="/export/items?format=xlsx">Export Excel</a>
      <a class="btn ghost" href="/export/items?format=pdf">Export PDF</a>
    </div>
    <form class="form-stack" method="post" action="/items/import" enctype="multipart/form-data">
      <label>
        Import Item (Excel)
        <input type="file" name="file" accept=".xlsx" required />
        <div class="muted">
          Kolom minimal: Nama Item, Jenis Barang. (Opsional: Divisi, Expired, SKU, Satuan, Min Stock)
        </div>
      </label>
      <button class="btn ghost" type="submit">Import Excel</button>
    </form>
  </div>

  <div class="card">
    <div class="card-header">
      <div>
        <h3>Divisi → Jenis Barang → Stock</h3>
        <p>Susunan stok per divisi dan jenis barang.</p>
      </div>
    </div>
    <% if (divisions.length === 0) { %>
      <div class="empty-state">Belum ada item.</div>
    <% } else { %>
      <% divisions.forEach((division) => { %>
        <div class="section-block">
          <div class="section-title"><%= division.name %></div>
          <% division.groups.forEach((group) => { %>
            <div class="section-sub"><%= group.name %></div>
            <div class="table-wrapper">
              <table>
                <thead>
                  <tr>
                    <th>Item</th>
                    <th>Stock</th>
                    <th>Expired</th>
                    <th>Min</th>
                    <th>Aksi</th>
                  </tr>
                </thead>
                <tbody>
                  <% group.items.forEach((item) => { %>
                    <tr>
                      <td>
                        <strong><%= item.name %></strong>
                        <div class="muted">SKU: <%= item.sku || '-' %></div>
                      </td>
                      <td><%= formatQty(item.stock) %> <%= item.unit || '' %></td>
                      <td><%= formatDate(item.expiry_date) %></td>
                      <td><%= formatQty(item.min_stock) %></td>
                      <td>
                        <div class="actions">
                          <a class="btn ghost" href="/items?edit=<%= item.id %>">Edit</a>
                          <form action="/items/<%= item.id %>/delete" method="post" onsubmit="return confirm('Hapus item ini?')">
                            <button class="btn danger" type="submit">Hapus</button>
                          </form>
                        </div>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          <% }) %>
        </div>
      <% }) %>
    <% } %>
  </div>
</div>

<%- include('../partials/foot') %>
