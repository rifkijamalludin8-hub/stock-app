<%- include('../partials/head', { pageTitle: 'Laporan Stock', page: 'reports' }) %>
<%
  const _showDivisionFilter = typeof showDivisionFilter !== 'undefined' && showDivisionFilter;
  const _divisionsList =
    typeof divisionsList !== 'undefined' && Array.isArray(divisionsList) ? divisionsList : [];
  const _selectedDivisionId = typeof selectedDivisionId !== 'undefined' ? selectedDivisionId : '';
%>

<div class="card">
  <div class="card-header">
    <div>
      <h3>Filter Laporan</h3>
      <p>Pilih range tanggal untuk menghitung saldo awal dan akhir.</p>
    </div>
  </div>
  <form method="get" action="/reports" class="form-inline">
    <label>
      Tanggal Mulai
      <input name="start" type="date" value="<%= start %>" required />
    </label>
    <label>
      Tanggal Akhir
      <input name="end" type="date" value="<%= end %>" required />
    </label>
    <% if (_showDivisionFilter) { %>
      <label>
        Divisi
        <select name="division_id">
          <option value="">Semua</option>
          <% _divisionsList.forEach((div) => { %>
            <option value="<%= div.id %>" <%= String(div.id) === String(_selectedDivisionId || '') ? 'selected' : '' %>>
              <%= div.name %>
            </option>
          <% }) %>
        </select>
      </label>
    <% } %>
    <button class="btn primary" type="submit">Tampilkan</button>
    <% if (rows.length > 0) { %>
      <% const divisionQuery = _showDivisionFilter && _selectedDivisionId ? `&division_id=${_selectedDivisionId}` : '' %>
      <div class="export-row">
        <a class="btn ghost" href="/export/report?format=xlsx&start=<%= start %>&end=<%= end %><%= divisionQuery %>">Export Excel</a>
        <a class="btn ghost" href="/export/report?format=pdf&start=<%= start %>&end=<%= end %><%= divisionQuery %>">Export PDF</a>
      </div>
    <% } %>
  </form>
</div>

<% if (rows.length === 0) { %>
  <div class="empty-state">Pilih range tanggal untuk melihat laporan.</div>
<% } else { %>
  <div class="card">
    <div class="card-header">
      <div>
        <h3>Ringkasan Laporan</h3>
        <p>Perusahaan: <strong><%= company.name %></strong> | Periode: <%= formatDate(start) %> s/d <%= formatDate(end) %></p>
      </div>
    </div>
  </div>
  <div class="scroll-box">
    <% divisions.forEach((division) => { %>
      <div class="card">
        <div class="card-header">
          <div>
            <h3><%= division.name %></h3>
            <p>Divisi → Jenis Barang → Item</p>
          </div>
        </div>
        <% division.groups.forEach((group) => { %>
          <div class="section-block">
            <div class="section-sub"><%= group.name %></div>
            <div class="table-wrapper">
              <table>
                <thead>
                  <tr>
                    <th>Item</th>
                    <th>Expired</th>
                    <th>Saldo Awal</th>
                    <th>Masuk</th>
                    <th>Keluar</th>
                    <th>Adjustment</th>
                    <th>Saldo Akhir</th>
                    <% if (showPrice) { %>
                      <th>Harga/Unit</th>
                      <th>Nilai Akhir</th>
                    <% } %>
                  </tr>
                </thead>
                <tbody>
                  <% group.items.forEach((item) => { %>
                    <tr>
                      <td>
                        <strong><%= item.item_name %></strong>
                        <div class="muted"><%= item.unit || '' %></div>
                      </td>
                      <td><%= formatDate(item.expiry_date) %></td>
                      <td><%= formatQty(item.opening) %></td>
                      <td><%= formatQty(item.in_qty) %></td>
                      <td><%= formatQty(item.out_qty) %></td>
                      <td><%= formatQty(item.adj_qty) %></td>
                      <td><%= formatQty(item.closing) %></td>
                      <% if (showPrice) { %>
                        <td><%= formatPrice(item.price_per_unit) %></td>
                        <td><%= formatPrice(item.stock_value) %></td>
                      <% } %>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        <% }) %>
      </div>
    <% }) %>
  </div>
<% } %>

<%- include('../partials/foot') %>
